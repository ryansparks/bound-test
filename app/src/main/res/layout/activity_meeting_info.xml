<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.victorluo.boundtestapp.MeetingInfoActivity"
    android:background="#7AC25A">
    android:textAlignment="center"
    android:background="#7AC25A">

    <Button
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="edit event"
        android:id="@+id/button9"
        android:textSize="20dp"
        android:textColor="#4ac25a"
        android:background="#f1f1f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/button4"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="To main menu"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textColor="#4ac25a"
        android:background="#f1f1f1"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:text="Pay your Friend"
        android:id="@+id/button4"
        android:textSize="20dp"
        android:textColor="#4ac25a"
        android:background="#f1f1f1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meeting Info"
        android:id="@+id/textView5"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>